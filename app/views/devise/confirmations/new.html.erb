<div class="row confirmation">
  <br/>
  <h2 class="text-center francois">Confirmação</h2>
  <div class="medium-5 medium-centered login-block columns">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <% if devise_error_messages! %>
          
          <span class="text-center" style="display: inline-block; font-size: .9em">Insira seu email abaixo para receber um novo link de confirmação. </span>
          <br/>

      <% end %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Insira seu email' %>

      <%= f.submit "Reenviar link de confirmação", class: [:login, :button] %>
      <br/><br/>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>



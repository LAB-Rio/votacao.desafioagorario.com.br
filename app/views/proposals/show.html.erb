<%= content_for :title, "Votação Conselho da Juventude: Proposta de #{@proposal.fullname}" %>

<%= content_for :facebook do %>
  <meta property="og:title" content="Votação Conselho da Juventude: Proposta de <%= @proposal.fullname %>"/>
  <meta property="og:description" content="<%= @proposal.title %>"/>
  <meta property="og:image" content="http://i.imgur.com/SUtx5sH.png"/>
  <meta property="og:site_name" content="Votação Conselho da Juventude"/>
  <meta property="og:url" content="<%= proposal_url(@proposal)%>"/>
  <meta property="og:locale" content="pt_BR" />
  <meta property="fb:app_id" content="642290912570358" /> 
<% end %>




<div class="full-image" style="background: url('<%= @proposal.image %>') no-repeat; background-size: cover">
  <h3 class="francois text-uppercase"><%= @proposal.title %></h3>
</div>

<div class="row">

  </div>
  <div class="medium-7 medium-centered proposal-text columns">
    <%= simple_format @proposal.large_description.html_safe, {}, sanitize: false %>
    <div class="row">
        <div class="medium-6 medium-centered text-center columns">
          <%= link_to "Selecionar esta proposta", '', class: 'select-proposal', data: { id: @proposal.id } %> 
          <br/><br/>
        </div>

        
    </div>
    <div class="row nav-actions">

      <div class="medium-4 small-4 text-center columns">
        <%= link_to proposal_path(@proposal.prev) do %>
          <%= image_tag 'previous.png' %>
          <span>Proposta anterior</span>
        <% end %>
      </div>

      <div class="medium-4 small-4 text-center columns">
        <%= link_to proposals_path do %>
          <%= image_tag 'home.png' %>
          <span>Ver todos as propostas</span>
        <% end %>
      </div>

      <div class="medium-4 small-4 text-center columns">
        <%= link_to proposal_path(@proposal.next) do %>
          <%= image_tag 'next.png' %>
          <span>Próxima proposta</span>
        <% end %>
      </div>
    </div>
<br/><br/><br/>
<br/><br/><br/>
<br/><br/><br/>
  </div>

</div>





<div class="fixed-save">
  <div class="row">
    <div class="medium-4 small-4 end columns">
      <a href="#" class="button clean-selection hide-for-small-only">Limpar votos</a>
      <a href="#" class="button clean-selection show-for-small-only">Limpar</a>
    </div>
    <div class="medium-4 small-3 columns end counter text-center">
      <span class="selected-count">0</span>  de <span> 10</span>
    </div>
    <div class="medium-4 small-5 columns end text-right">
      <%= form_for :proposals_users, html: { id: 'proposalForm' }, url: save_path, method: :post do |f| %>
        <span class="inputs"></span> 
        <%= f.button 'Finalizar e salvar votos', class: [:button, :submit, 'hide-for-small-only'] %>
        <%= f.button 'Finalizar', class: [:button, :submit, 'show-for-small-only'] %>
      <% end %>
    </div>
  </div>
</div>


<div class="fixed-msg hide">
  <div class="row">
    <div class="medium-6 fixed-block text-center medium-centered columns">
      <h3 class="francois">Você votou em apenas <span class="selected-count">0</span> propostas.</h3> 
      <br/>
      <h5 class="francois">Deseja concluir mesmo assim? </h5>
      <p>
        <br/>
        <a href="#" class="close button">Voltar</a>&nbsp;
        <a href="#" class="save button">Continuar</a>
      </p>
    </div>
  </div>
</div>
